<html>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title><%= @parent.name %></title>
    <%= javascript_include_tag :defaults %>
    <% if flash[:warning] or flash[:notice] %>
    <div style="postition:fixed; border-style:solid; border-width:5px;float:right; z-index:1;" id="notice" <% if flash[:warning] %>class="warning"<% end %> style="color:green">
        <%= flash[:warning] || flash[:notice] %>
      </div>
      <script type="text/javascript">
        setTimeout("new Effect.Fade('notice');", 100)
        </script>
      <% end %>
    </head>
    <body>
      <%= link_to 'Logout',logout_path, :style => 'float:right;' %>
      <%= yield %>
    </body>
  </html>
