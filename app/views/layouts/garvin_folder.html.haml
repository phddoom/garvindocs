%html
  %head
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %title= @parent.name
    = javascript_include_tag :defaults
    - if flash[:warning] or flash[:notice]
      <div style="postition:fixed; border-style:solid; border-width:5px;float:right; z-index:1;" id="notice"
      :javascript
        setTimeout("new Effect.Fade('notice');", 100)
          %body
    = link_to 'Logout',logout_path, :style => 'float:right;'
    = yield

